<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/newbanner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/Layhourid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/hourupid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickHour"
                android:src="@drawable/hourup" />

            <Button
                android:id="@+id/hourtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickTimeSet"
                android:textColor="@android:color/white"
                android:textSize="40pt" />

            <ImageButton
                android:id="@+id/hourdownid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickHour"
                android:src="@drawable/hourdown" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="onClickTimeSet"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text=":"
            android:textColor="@android:color/white"
            android:textSize="40pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/min1upid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickMin1"
                android:paddingLeft="28dp"
                android:src="@drawable/hourup" />

            <Button
                android:id="@+id/mintxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickTimeSet"
                android:paddingLeft="28dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="40pt" />

            <ImageButton
                android:id="@+id/min1downid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickMin1"
                android:paddingLeft="28dp"
                android:src="@drawable/hourdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/min2upid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickMin2"
                android:paddingLeft="2dp"
                android:src="@drawable/hourup" />

            <Button
                android:id="@+id/mintxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickTimeSet"
                android:paddingLeft="5dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="40pt" />

            <ImageButton
                android:id="@+id/min2downid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:onClick="onClickMin2"
                android:paddingLeft="2dp"
                android:src="@drawable/hourdown" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ampmimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="onClickAmpm"
            android:paddingTop="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sunid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickDayImg"
            android:src="@drawable/sun1" />

        <ImageView
            android:id="@+id/monid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickDayImg"
            android:src="@drawable/mon1" />

        <ImageView
            android:id="@+id/tueid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickDayImg"
            android:src="@drawable/tue1" />

        <ImageView
            android:id="@+id/wedid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickDayImg"
            android:src="@drawable/wed1" />

        <ImageView
            android:id="@+id/thuid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickDayImg"
            android:src="@drawable/thu1" />

        <ImageView
            android:id="@+id/friid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickDayImg"
            android:src="@drawable/fri1" />

        <ImageView
            android:id="@+id/satid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickDayImg"
            android:src="@drawable/sat1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/timercheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbtn"
            android:clickable="true"
            android:focusable="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer" />
    </LinearLayout>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:src="@drawable/description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/sound" />

        <Button
            android:id="@+id/soundid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="onClickSoundbtn"
            android:paddingTop="5dp"
            android:text="벨소리설정"
            android:textColor="#BFBFBF"
            android:textSize="9pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/vibe" />

        <CheckBox
            android:id="@+id/vibecheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="200dp"
            android:button="@drawable/checkbtn"
            android:clickable="false"
            android:focusable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:onClick="onClickOkbtn"
            android:text="OK"
            android:textColor="#BFBFBF"
            android:textSize="9pt" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:onClick="onClickCancelbtn"
            android:text="Cancel"
            android:textColor="#BFBFBF"
            android:textSize="9pt" />
    </LinearLayout>

</LinearLayout>