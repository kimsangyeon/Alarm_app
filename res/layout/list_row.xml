<?xml version="1.0" encoding="utf-8"?>
<kit.yeon.morningcallofduty.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yeon="http://schemas.android.com/apk/res/kit.yeon.morningcallofduty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    yeon:checkable="@+id/check" >

    <CheckBox
        android:id="@id/check"
        android:button="@drawable/checkbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/musicid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:textSize="13pt"
            android:focusable="false" />

        <TextView
            android:id="@+id/clockid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:textSize="13pt"
            android:focusable="false"
            android:text="6:00 AM" />


       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sunid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sun1" />

        <ImageView
            android:id="@+id/monid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mon1" />

        <ImageView
            android:id="@+id/tueid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tue1" />

        <ImageView
            android:id="@+id/wedid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/wed1" />

        <ImageView
            android:id="@+id/thuid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/thu1" />

        <ImageView
            android:id="@+id/friid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/fri1" />

        <ImageView
            android:id="@+id/satid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sat1" />
    </LinearLayout>
    </LinearLayout>

</kit.yeon.morningcallofduty.CheckableRelativeLayout>